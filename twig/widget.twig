<li id="{{ box.uniqid }}">
    <div class="dashboardWidget">
        <div class="header">
            {{ box.title }}
            <div class="actions">
                <div class="action close" onclick="dashboardRemoveWidget(this);">X</div>
            </div>
        </div>
        <div class="content">
            {% block widgetContent %}
                {{ box.content }}
            {% endblock %}
        </div>
    </div>
</li>