{% extends "widget.twig" %}

{% block widgetContent %}
    <table>
        <tr>
            {% for Column in box.Columns %}
                <th>
                    {{ Column }}
                </th>
            {% endfor %}
        </tr>

        {% for row in box.content %}
            <tr>
                {% for key, col in row %}
                    <td>
                        {{ col }}
                    </td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}